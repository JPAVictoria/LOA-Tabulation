generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  username String  @unique
  password String
  role     Role
  deleted  Boolean @default(false)

  assignedCompetition CompetitionType?

  scores   Score[]
}

enum Role {
  ADMIN
  JUDGE
}

enum CompetitionType {
  FLAG_TWIRLING
  PAGEANTRY
  HIPHOP
  SINGING
}

enum Level {
  COLLEGE
  SENIOR_HIGH
}

model Category {
  id             Int              @id @default(autoincrement())
  name           String
  competition    CompetitionType
  deleted        Boolean          @default(false)

  criteria     Criteria[]
}

model Criteria {
  id         Int      @id @default(autoincrement())
  name       String
  percentage Int
  categoryId Int
  deleted    Boolean  @default(false)

  category Category @relation(fields: [categoryId], references: [id])
  scores   Score[]
}

model Candidate {
  id              Int              @id @default(autoincrement())
  name            String
  course          String
  candidateNumber Int
  gender          Gender
  imageUrl        String?
  competition     CompetitionType
  level           Level
  deleted         Boolean          @default(false)

  scores      Score[]
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

model Score {
  id          Int      @id @default(autoincrement())
  score       Decimal  @db.Decimal(5, 2)
  deleted     Boolean  @default(false)

  judgeId     Int
  candidateId Int
  criteriaId  Int

  judge     User      @relation(fields: [judgeId], references: [id])
  candidate Candidate @relation(fields: [candidateId], references: [id])
  criteria  Criteria  @relation(fields: [criteriaId], references: [id])
}